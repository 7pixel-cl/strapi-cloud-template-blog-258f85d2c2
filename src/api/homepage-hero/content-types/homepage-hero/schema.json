    "heroImageAlt": {
      "type": "string",
      "required": true
    },
    "ratingText": {
      "type": "richtext"
    },
    "reviewsText": {
      "type": "richtext"
    },
    "avatars": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
