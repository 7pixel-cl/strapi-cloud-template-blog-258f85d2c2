{
  "kind": "collectionType",
  "collectionName": "feature_tabs",
  "info": {
    "singularName": "feature-tab",
    "pluralName": "feature-tabs",
    "displayName": "Feature Tab",
    "description": "Tabbed feature sections with images for school life showcase"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "heading": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "text",
      "required": true
    },
    "icon": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "imageAlt": {
      "type": "string",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
