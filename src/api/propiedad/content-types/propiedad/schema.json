{
  "kind": "collectionType",
  "collectionName": "propiedades",
  "info": {
    "singularName": "propiedad",
    "pluralName": "propiedades",
    "displayName": "Propiedad (Property)",
    "description": "Home models and properties for Campo Mait√©n"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 1,
      "min": 1
    },
    "areaM2": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "areaSqft": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "bedrooms": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 10
    },
    "bathrooms": {
      "type": "decimal",
      "required": true,
      "min": 0.5,
      "max": 10
    },
    "solar": {
      "type": "boolean",
      "default": false
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "blurb": {
      "type": "text",
      "maxLength": 500
    },
    "description": {
      "type": "richtext"
    },
    "interiorFeatures": {
      "type": "component",
      "repeatable": true,
      "component": "property.feature-item"
    },
    "exteriorFeatures": {
      "type": "component",
      "repeatable": true,
      "component": "property.feature-item"
    },
    "valueFeatures": {
      "type": "component",
      "repeatable": true,
      "component": "property.feature-item"
    },
    "efficiencyFeatures": {
      "type": "component",
      "repeatable": true,
      "component": "property.feature-item"
    },
    "language": {
      "type": "enumeration",
      "enum": ["es", "en"],
      "default": "es",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "available": {
      "type": "boolean",
      "default": true
    },
    "price": {
      "type": "decimal",
      "min": 0
    },
    "priceNote": {
      "type": "string",
      "maxLength": 200
    }
  }
}
