{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ",
    "description": "Frequently Asked Questions for the school website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "question": {
      "type": "string",
      "required": true
    },
    "answer": {
      "type": "text",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["general", "admision", "academico", "instalaciones", "alimentacion", "actividades"],
      "default": "general"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "language": {
      "type": "enumeration",
      "enum": ["es", "en"],
      "default": "es"
    }
  }
}
